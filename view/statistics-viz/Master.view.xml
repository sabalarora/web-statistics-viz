		</semantic:subHeader>
		<semantic:content>
			<Toolbar class="measureToolBar">
				<Label text="Aggregation Level" class="toolBarTextHeader"></Label>
			</Toolbar>

			<Select id="selectPopover" width="100%" name="test" class="selectPop">
				<items>
					<core:Item text="Default" key="Default" />
				</items>
				<items>
					<core:Item text="Customer Popover" key="Customer_Popover" />
				</items>
			</Select>

			<List id="MeasureList" mode="MultiSelect" selectionChange="onSelectionChange" includeItemInSelection="true" items="{
					path: '/dataset/measures'
				}">
				<headerToolbar>
					<Toolbar class="measureToolBar">
						<Label text="Measures" class="toolBarTextHeader"></Label>
					</Toolbar>
				</headerToolbar>
				<items>
					<StandardListItem  title="{name}">
					</StandardListItem>
				</items>
				<!-- <StandardListItem id="Profit" title="Profit" description="profit" selected="true" />
				<StandardListItem id="Cost" title="Cost" description="cost" selected="true" />
				<StandardListItem id="Revenue" title="Revenue" description="revenue" selected="true" /> -->
			</List>
			<List id="ApplicationList" mode="MultiSelect" includeItemInSelection="true" items="{
					path: '/applications'
				}">
				<headerToolbar>
					<Toolbar class="measureToolBar">
						<Label text="Applications" class="toolBarTextHeader"></Label>
					</Toolbar>
				</headerToolbar>
				<items>
					<StandardListItem type="{= ${device>/system/phone} ? 'Active' : 'Inactive'}" press="onSelectionChange" title="{name}" numberUnit="{UnitOfMeasure}">
					</StandardListItem>
				</items>
				<!-- <StandardListItem id="Profit" title="Profit" description="profit" selected="true" />
