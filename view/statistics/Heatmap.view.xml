<mvc:View controllerName="com.dla.webstat.controller.statistics.Heatmap"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:layout="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data" height="100%"
>
	<!-- <viz:VizFrame id="idVizFrame" 
		uiConfig="{applicationSet:'fiori'}"
        height="100%" 
		width="100%">
    </viz:VizFrame> -->

    <viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}"
        height="100%" width="100%" vizType="heatmap">
        <viz:dataset>
			<viz.data:FlattenedDataset data="{/heatmapdaily}">
				<viz.data:dimensions>
					<viz.data:DimensionDefinition name="App Name" value="{Day}"/>
					<viz.data:DimensionDefinition name="Hours" value="{Time}"/>
				</viz.data:dimensions>
				<viz.data:measures>
					<viz.data:MeasureDefinition name="Hits" value="{Hits}"/>
				</viz.data:measures>
			</viz.data:FlattenedDataset>
		</viz:dataset>
		<viz:feeds>
			<viz.feeds:FeedItem uid="color" type="Measure" values="Hits"/>
			<viz.feeds:FeedItem uid="categoryAxis" type="Dimension" values="Hours"/>
			<viz.feeds:FeedItem uid="categoryAxis2" type="Dimension" values="App Name"/>
		</viz:feeds>                 
    </viz:VizFrame>
</mvc:View>